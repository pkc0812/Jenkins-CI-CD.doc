example :-

1-Hello pieline

pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
    }
}



2-Linux,shell commands pipeline

pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello, World!'
                sh '''
                    echo "Current user: $(whoami)"
                    mkdir -p pavan
                    cd pavan
                    echo "Now inside: $(pwd)"
                '''
            }
        }
    }
}


3-one shell commands

pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello pavan'
                sh 'mkdir pavan'pipeline {
    agent any

  
                sh 'touch pavan.html'
                sh 'echo "hello-pkc" >> pavan.html'
            }
        }
    }
}

4-httpd install &demo view

pipeline {
    agent any

    stages {
        stage('pkc') {
            steps {
                sh '''
                   mkdir -p pkc0812i
                   cd pkc0812i
                   echo "hello pkc chif" >> index.html
                   cat index.html
                   sudo yum install -y httpd
                   sudo systemctl start httpd
                   sudo systemctl enable httpd
                   sudo cp pkc0812i/index.html /var/www/html/
               '''
                
            }
        }
    }
}





